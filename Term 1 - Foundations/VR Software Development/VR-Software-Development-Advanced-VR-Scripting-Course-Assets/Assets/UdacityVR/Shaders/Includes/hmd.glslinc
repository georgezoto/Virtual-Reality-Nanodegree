//head mounted display
vec2 head_mounted_display(vec2 uv)
{
	uv			-= .5;
    uv.x        = (fract(uv.x) - .5 ) + sign(uv.x) * .25 * _HMD[0];
    uv.x        *= 2.;
                   
    float warp  = normalize(vec3(uv, _HMD[1])).z;
    warp        = _HMD[2] * warp + _HMD[3] * warp * warp + _HMD[4] * warp * warp * warp;
    
    return uv * warp;
}
